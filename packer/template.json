{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ region }}",
      "source_ami": "{{ source_ami }}",
      "instance_type": "{{ instance_type }}",
      "vpc_id": "{{ vpc_id }}",
      "security_group_id": "",
      "subnet_id": "{{ subnet_id }}",
      "ssh_username": "{{ ssh_username }}",
      "ssh_keypair_name": "{{ ssh_keypair_name }}",
      "ssh_private_key_file": "data/{{ ssh_keypair_name }}.pem",
      "ssh_pty": true,
      "ami_users": ["{{ ami_user }}"],
      "snapshot_users": ["{{ snapshot_user }}"],
      "ami_name": "{{ ami_name_prefix }}-{{ version }}",
      "profile": "{{ aws_profile }}"
    }
  ],
  "provisioners": [
     {
       "type": "shell",
       "remote_path": "/home/centos/setup.sh",
       "script": "scripts/setup.sh"
     },
     {
       "type": "ansible-local",
       "playbook_file": "./ansible_roles/main.yml",
       "playbook_dir": "./ansible_roles/",
       "inventory_file": "./ansible_roles/inventories/master"
     },
     {
       "type": "shell",
       "remote_path": "/home/centos/curl_metadata.sh",
       "inline": [
         "curl http://169.254.169.254/latest/meta-data/public-ipv4 | xargs -I target_ip echo TARGET_IP=target_ip"
       ]
     },
     {
       "type": "shell-local",
       "command": "scripts/serverspec.sh"
     },
     {
       "type": "shell-local",
       "command": "egrep ' [^1-9] failures' build.log"
     }
   ]
 }
